{
  "name": "polkafix-dapp",
  "version": "1.0.0",
  "private": true,
  "description": "PolkaFix - Decentralized Bug Bounty Platform",
  "scripts": {
    "install:all": "cd client && npm install && cd ../contracts && npm install",
    "dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "compile": "cd contracts && npm run compile",
    "deploy:moonbase": "cd contracts && npm run deploy:moonbase",
    "verify:moonbase": "cd contracts && npm run verify:moonbase"
  },
  "workspaces": [
    "client",
    "contracts"
  ]
}
